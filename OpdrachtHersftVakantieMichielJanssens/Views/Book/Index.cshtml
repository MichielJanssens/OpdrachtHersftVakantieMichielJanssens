@model BookListViewModel

@{
}
<h1>Boekenlijst</h1>
<table class="table">
    <thead>
        <tr>
            <td>Title</td>
            <td>Author</td>
            <td>Genre</td>
            <td>CreatedOn</td>
            <td>ISBN</td>
        </tr>
    </thead>
    @foreach (var book in Model.Books)
            {
        <tr>
            <td>
                <a asp-controller="Book" asp-action="Detail" asp-route-id="1">@book.Title</a>
            </td>
            <td>@book.Author</td>
            <td>@book.CreatedOn.ToLongDateString()</td>
            <td>@book.ISBN</td>
            <td>@book.Genre</td>
        </tr>
    }
</table>